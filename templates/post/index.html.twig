{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <h1>Post index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Contenido</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.titulo }}</td>
                <td>{{ post.contenido }}</td>
                <td>
                    <a href="{{ path('app_post_show', {'id': post.id}) }}" class="btn btn-outline-success">Ver</a>
                    <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn btn-outline-success">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_post_new') }}" class="btn btn-success">Crear Nuevo</a>
    <a href="{{ path('app_usuario_index') }}" class="btn btn-success">Usuario</a>
{% endblock %}
